{
    "name": "chiron/app",
    "type": "project",
    "description": "Chiron Skeleton Application",
    "homepage": "https://github.com/ncou/app",
    "keywords": [
        "chiron",
        "skeleton",
        "application",
        "app"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "vlucas/phpdotenv": "^5.0",
        "nyholm/psr7": "^1.2",
        "chiron/chiron": "^3.8",
        "chiron/views": "^1.0",
        "chiron/fastroute-bridge": "^1.0",
        "filp/whoops": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "bash bin/chiron cache:clear",
            "bash bin/chiron package:discover"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "bash bin/chiron encrypt:key -m .env"
        ],
        "test": "phpunit --colors=always"
    }
}
