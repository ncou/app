{
    "name": "chiron/app",
    "type": "project",
    "description": "Chiron Skeleton Application",
    "homepage": "https://github.com/ncou/app",
    "keywords": [
        "chiron",
        "skeleton",
        "application",
        "app"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "filp/whoops": "^2.7",
        "nyholm/psr7": "^1.2",
        "vlucas/phpdotenv": "^5.0",
        "chiron/chiron": "^3.8",
        "chiron/views": "^1.0",
        "chiron/router-fastroute": "^0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "bash bin/chiron cache:clear",
            "bash bin/chiron package:discover"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('app/.env') || copy('app/.env.example', 'app/.env');\""
        ],
        "post-create-project-cmd": [
            "bash bin/chiron encrypt:key -m app/.env"
        ],
        "start": "php -S localhost:8080 -t public/",
        "serve": "bash bin/chiron serve",
        "test": "phpunit --colors=always"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
