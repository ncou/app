{
    "name": "chiron/app",
    "type": "project",
    "description": "Chiron Basic Application",
    "homepage": "https://github.com/ncou/app",
    "keywords": [
        "chiron",
        "application",
        "app"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "nyholm/psr7": "^1.2",
        "filp/whoops": "^2.7",
        "chiron/chiron": "^3.9",
        "chiron/logger": "^0.2",
        "chiron/response-creator": "^1.0",
        "chiron/views": "^1.0",
        "chiron/fastroute-bridge": "^1.0",
        "chiron/dotenv-bridge": "^1.0",
        "chiron/sapi": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0",
        "chiron/coding-standard": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "bash bin/chiron cache:clear",
            "bash bin/chiron package:discover"
        ],
        "post-create-project-cmd": [
            "bash bin/chiron dotenv:copy -d .env",
            "bash bin/chiron dotenv:key -m .env"
        ],
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse app --level=max",
        "check-style": "phpcs app tests",
        "fix-style": "phpcbf app tests"
    }
}
