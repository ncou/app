{
    "name": "chiron/app",
    "description": "Chiron Application Example",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "chiron",
        "framework",
        "skeleton",
        "application",
        "app"
    ],
    "homepage": "https://github.com/ncou/app",
    "require": {
        "php": "^8.0 || ^8.1",
        "chiron/chiron": "^3.9",
        "chiron/debug": "^1.0",
        "chiron/fastroute-bridge": "^1.0",
        "chiron/logger": "^0.2",
        "chiron/response-creator": "^1.0",
        "chiron/sapi": "^1.0",
        "chiron/views": "^1.0",
        "chiron/webserver": "^1.0",
        "nyholm/psr7": "^1.4",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "chiron/devtools": "^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true,
            "chiron/devtools": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "captainhook": {
            "force-install": true
        },
        "chiron/devtools": {
            "command-prefix": "dev"
        },
        "ramsey/conventional-commits": {
            "configFile": "conventional-commits.json"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@init-app"
        ],
        "post-update-cmd": [
            "@init-app"
        ],
        "post-create-project-cmd": [
            "@init-app"
        ],
        "init-app": [
            "App\\Installer::initProject",
            "App\\Installer::thanksReminder"
        ]
    }
}
