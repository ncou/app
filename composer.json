{
    "name": "chiron/app",
    "type": "project",
    "description": "Chiron Skeleton Application",
    "homepage": "https://github.com/ncou/app",
    "keywords": [
        "chiron",
        "skeleton",
        "application",
        "app"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "chiron/chiron": "^2.7",
        "chiron/php-renderer": "^1.6",
        "chiron/router-fastroute": "^0.5",
        "nyholm/psr7": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('app/.env') || copy('app/.env.example', 'app/.env');\"",
            "bash bin/chiron encrypt::key -m app/.env",
            "bash bin/chiron runtime -vv"
        ],
        "start": "php -S localhost:8080 -t public/",
        "serve": "bash bin/chiron serve",
        "test": "phpunit --colors=always"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
